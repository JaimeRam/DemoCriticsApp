<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:id="@+id/activitySectionViewerLayout"
        tools:context="com.example.zorbel.apptfg.programs.SectionViewerActivity">

        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/proposalImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_health_cross"/>

            <TextView
                android:id="@+id/proposalTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Titulo de la Propuesta"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="0.7"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/buttonFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@mipmap/ic_starfav_yellow"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white_pressed"/>

        </LinearLayout>

        <TextView
            android:id="@+id/proposalCategory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTitle"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:text="#Sanidad"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/proposalUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTitle"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:text="Pepito_Perez"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/proposalUser"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textProposal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>

                </ScrollView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_proposalsHow"
                    android:layout_marginBottom="10dp"/>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/howProposal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>

                </ScrollView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_proposalsMoney"
                    android:layout_marginBottom="10dp"/>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/moneyProposal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>

                </ScrollView>


            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_greenlike"
                        android:id="@+id/buttonLike"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_bluenotunderstood"
                        android:id="@+id/buttonNotUnderstood"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_reddislike"
                        android:id="@+id/buttonDislike"/>

                </TableRow>


                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_buttonComment"
                    android:drawableLeft="@mipmap/ic_commentwhite"
                    android:id="@+id/buttonComment"/>

            </TableLayout>

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111" />

    <ExpandableListView
        android:id="@+id/right_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111" />

</android.support.v4.widget.DrawerLayout>
