<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zorbel.apptfg">

    <uses-sdk android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PartiesActivity"
            android:label="@string/title_activity_parties"></activity>
        <activity
            android:name=".PoliticalProgramIndexActivity"
            android:label="@string/title_activity_political_program_index"></activity>
        <activity
            android:name=".TemplateActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".SectionViewerActivity"
            android:label="@string/title_activity_section_viewer"></activity>
        <activity
            android:name=".CommentsActivity"
            android:label="@string/title_activity_comment"></activity>
    </application>

</manifest>
